@import "placeholders.styl"

/* ==========================================================================
	Media
	========================================================================== */

/* Landscape */

@media screen and (orientation landscape)

	/* Container without scrollbar */

	.SashaMargin
		margin-right 2rem
		margin-left 1rem

	/*
	* main in right side;
	* “right: 0” doesn't work.
	*/

	main
		float right

	noscript
		@extend $SashaRightZero

	/*
	* Overwrite “left:0” for default browser-update settings:
	* https://stackoverflow.com/a/10102950/5951529
	*/
	div.buorg
		@extend $SashaRightZero
		left auto

/* Portrait */

@media screen and (orientation portrait)

	/* Don't use Malihu */

	/*    .mCustomScrollbar .mCSB_scrollTools {
