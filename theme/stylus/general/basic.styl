/* ==========================================================================
	> General
	========================================================================== */

/* >> import placeholders
	========================================================================== */

// [NOTE] Ignoring here required, that ignore id warning for “#SashaRunKit” id
/* csslint ignore:start */

@import "placeholders.styl"

/* csslint ignore:end */

/* >> overflow-wrap
	========================================================================== */

.SashaBottomAside
.SashaInlineHighlight
	@extend $SashaNoHorizontalScrollbar

/* >> HTML, body
	========================================================================== */

html
	@extend $SashaHTMLBody

body
	@extend $SashaHTMLBody
	/*
	[INFO] Safe web fonts
	http://web.mit.edu/jmorzins/www/fonts.html
	[NOTE] Commas between fonts required, if multiple.
	[INFO] generic-family required for Stylelint:
	https://developer.mozilla.org/en-US/docs/Web/CSS/font-family
	https://stylelint.io/user-guide/rules/font-family-no-missing-generic-family-keyword
	[INFO] generic-family for web safe fonts:
	https://www.w3schools.com/cssref/css_websafe_fonts.asp
	https://www.tutorialbrain.com/css_tutorial/css_font_family_list/
	[INFO] Valid generic-names:
	https://www.w3.org/TR/CSS2/fonts.html#generic-font-families
	https://developer.mozilla.org/en-US/docs/Web/CSS/font-family#Values
	[NOTE] Comma required between font and generic-family:
	http://stylus-lang.com/try.html#?code=body%0A%09font-family%20Arial%20sans-serif
	 */
	font-family Arial, Helvetica, sans-serif
	font-size 1.1875rem
	margin 0
	padding 0

/*  >> Links
	========================================================================== */

/*
 * [INFO] Disable dotted outline, if user move by links use tab key, see
 * https://css-tricks.com/removing-the-dotted-outline/
 */

/*
[NOTE] I not disable outline:none; but alternative in design files, not “basic.css”
[NOTE] Comment beginning before “a”, not “&:focus” required
 */

/* csslint ignore:start */

a
	@extend $SashaNoHorizontalScrollbar
	text-decoration none

	&:focus
		outline 0

/* csslint ignore:end */

/*
 * Permalinks
 */

/* Permalinks hidden by default */

.headerlink
	visibility hidden

/* >> Headers
	========================================================================== */

h2
h3
h4
h5
h6
	@extend $SashaVisiblePermalinks

/* Interlineage in h1 header */

.SashaHeader
	line-height .7rem

/* >> Bold and cursive
	========================================================================== */

em
	@extend $SashaNoHorizontalScrollbar

/* >> KBD
	========================================================================== */

kbd
	@extend $KiraKbd

// [INFO] GRights tag
.KiraGRights
	@extend $KiraKbd
	font-style italic

/* >> noscript
	========================================================================== */

/*
 * Message in top bar, if JavaScript disable:
 * Based on:
 * http://www.w3programmers.com/pure-css-noscript-message/
 */

noscript
	color white
	font-family sans-serif
	font-weight bold
	text-align center
	padding 1rem 0
	background rgba(0 0 0 .9)
	position fixed
	top 0
	z-index 900

/* ==========================================================================
	> Tables
	========================================================================== */

/*
 * Basic style — https://css-tricks.com/complete-guide-table-element/#article-header-id-4
 */

// That table not went beyond the screen

table
	width 100%

/*
 * Words wrap in cells of HTML tables:
 * https://stackoverflow.com/a/1539167/5951529
 * https://caniuse.com/#search=break-all
 */

td
th
	padding .5rem
	@extend $SashaNoHorizontalScrollbar

/*
 * [FIXME] I can't make responsive tables:
 * https://stackoverflow.com/q/50274179/5951529
 * https://github.com/noeldelgado/gemini-scrollbar/issues/62
 */
// .justtable
// 	overflow-x auto

/* ==========================================================================
	> Lists
	========================================================================== */

/* >> ol, ul, li
	========================================================================== */

/* [DEPRECATED] Incorrect works indents for lists, example:
<li>
<p>Kristina</p>
</li>
 */

/*
That the bullets not lost on mobile version
ol,
ul {
	list-style-position: inside;
}
 */

// Left margin in nested lists

ol
ul
	> li
		@extend $SashaNoHorizontalScrollbar
		@extend $KiraOptimalMarginLeft

.SashaOlMargin
	@extend $KiraOptimalMarginLeft

/* >> TOC
	========================================================================== */

// Disable default numeration
.SashaTOC
	list-style-type none
	padding 0 0 0 1rem

/* >> dd, dt, dl
	========================================================================== */

/*
 * Dd, dt, dl tags
 * https://webref.ru/html/dd
 */

dt
	font-weight bold

dd
	font-style italic

/* >> Russian letters as markers
	========================================================================== */

/*
 * [INFO] Russian letters as list markers
 * https://ru.stackoverflow.com/a/523299/199934
 */

.russianletters
	list-style-type none
	/* Прячем исходную нумерацию */

	li
		margin 0

/* [INFO] prefix variant “@-webkit-keyframes” not needed at February, 2019:
https://caniuse.com/#search=%40keyframes
 */
@keyframes fade-in
	0%
		opacity 0

	100%
		opacity 1

/* [INFO] prefix variant “-webkit-transform” not needed at February, 2019:
https://caniuse.com/#search=transform
[NOTE] Comma required:
https://github.com/search?l=Stylus&p=1&q=transform+scale%28+extension%3Astyl&type=Code
 */
@keyframes fade
	10%
		transform scale(1, 1)

	35%
		transform scale(1, 1.7)

	40%
		transform scale(1, 1.7)

	50%
		opacity 1

	60%
		transform scale(1, 1)

	100%
		transform scale(1, 1)
		opacity 0

/* ==========================================================================
	> Footer
	========================================================================== */

/* >> Neighbors Pelican
	========================================================================== */

/*
 * Add links for previous and next buttons
 * https://github.com/getpelican/pelican-plugins/tree/master/neighbors
 *  Example — https://github.com/whatifrussian/website/blob/9e29831dcf61c85e711a392709aaf711212ba7c9themes/whatif/templates/includes/article_content.html
 */

.SashaHeadPageLeft
.SashaPreviousNeighbor
	@extend $SashaFloatLeft
	@extend $SashaMargin5Rem
	@extend $SashaFontSizeChildLink

.SashaNextNeighbor
.SashaHeadPageRight
	@extend $SashaFloatRight
	@extend $SashaMargin5Rem
	@extend $SashaFontSizeChildLink

/*
 * Stop float — https://stackoverflow.com/a/6205224/5951529
 * Need to add empty div tag after tags with float; not use for same as float tag
 */

.SashaClearBoth
	clear both

/* >> Another footer
	========================================================================== */

.SashaEmNoColor
	@extend $SashaItalic
	@extend $SashaMargin5Rem

.WorkOnYourself
	@extend $SashaMargin5Rem

.SashaEmNoColorBottom
	@extend $SashaItalic
	margin 1rem 0 0

/* ==========================================================================
	> Images
	========================================================================== */

/* >> img
	========================================================================== */

img
	max-width 100%
	margin 0 auto

/* >> Left and right
	========================================================================== */

.leftimg
	float left
	margin .3125rem .3125rem .3125rem 0

.rightimg
	float right
	margin .3125rem 0 .3125rem .3125rem

/* >> Width of images
	========================================================================== */

.Sasha140
	width 8.75rem

.Sasha280
	width 17.5rem

.Sasha470
	width 29.375rem

.Sasha700
	width 43.75rem

/* >> Image border
	========================================================================== */

.SashaSign
	padding .4375rem
	margin .3125rem 0

	figcaption
		margin 0 auto

/* >> External links image
	========================================================================== */

/*
 * Pelican plugin linkclass, see
 * https://github.com/rlaboiss/pelican-linkclass
 */

.external
	&:after
		content url("../../../images/interface_images/external-link.png")
		margin-left .2rem

/* ==========================================================================
	> Iframes
	========================================================================== */

/* >> Embed iframe
	========================================================================== */

/* csslint ignore:start */

// [NOTE] Id, not class required for #SashaRunKit third-party element

// PeerTube videos
.SashaVideo
	@extend $SashaIframe
	padding-bottom 74.380%

// RunKit
#SashaRunkit
	@extend $SashaIframe
	/*
	[NOTE] Use rem, not percents! Percents works for PeerTube and YouTube,
	but doesn't work for WebMoney and RunKit
	[WARNING] Exact value required for different browsers it may be different
	for supporting all browsers I need set big value,
	but big blank place may be in another.
	 */
	padding-bottom 13rem

// WebMoney widget
.SashaWebMoneyWidget
	@extend $SashaIframe
	padding-bottom 16rem

/* csslint ignore:end */

iframe
	width 100%
	height 100%
	position absolute
	/* Instead of frameborder — http://stackoverflow.com/a/10831379/5951529 */
	border 0


/* ==========================================================================
	> Blockquotes
	========================================================================== */

/* >> Left-border blockquote
	========================================================================== */

blockquote
	font-size 1.1875rem
	font-style italic
	margin .625rem 2.5rem
	padding .9375rem

/* >> Terms
	========================================================================== */

.SashaBlockquote
	padding .25rem
	border-width thick
	border-top-style ridge
	border-right-style groove
	border-bottom-style groove
	border-left-style ridge

/* >> Quotes top and bottom
	========================================================================== */

.SashaCitation
	display inline-block

.SashaTopQuote
	@extend $KiraCitationsQuotes
	margin 1.8rem 0 0
	vertical-align - .2rem

.SashaBottomQuote
	@extend $KiraCitationsQuotes
	vertical-align -2.5rem

/* >> Epigraph
	========================================================================== */

/*
 * Disable gradient for em tag
 * Inscription after epigraph
 */

.SashaEpigraph
	font-style italic
	margin 4rem 0
	text-align right

	> em
		background-image none

	> .SashaEpigraphAuthor
		line-height 1rem
		margin 2rem 0
		font-style italic

/* >> Blocks for examples
	========================================================================== */

.SashaGingerinasExample
.SashaGingerinasBadExample
	padding .2rem

/* ==========================================================================
	> Code
	========================================================================== */

/*
 * relative — for correct code block displaying
 * pre-wrap — code wraps to the next line
 * padding — padding code from the code block
 * tab-size — because tab=8 in Rainbow code
 */

pre
	@extend $SashaNoHorizontalScrollbar
	position relative
	white-space pre-wrap
	padding .5rem
	/*
	 * [NOTE] Edge not support tab-size:
	 * https://developer.microsoft.com/en-us/microsoft-edge/platform/status/csstabsizeproperty/
	 * https://wpdev.uservoice.com/forums/257854-microsoft-edge-developer/suggestions/6524689-tab-size-property
	 * But BrowserStack testing show, that it no serious problem.
	 * [NOTE] Partial support integer, not length values → I can disable doiuse:
	 * https://caniuse.com/#search=tab-size
	 * [LEARN][CSS] Length values:
	 * https://tympanus.net/codrops/css_reference/length/
	 * https://tympanus.net/codrops/css_reference/tab-size/
	 */
	/* doiuse-disable css3-tabsize */
	tab-size 4
	/* doiuse-enable css3-tabsize */


/* ==========================================================================
	> Sasha tags
	========================================================================== */

/* >> Page version
	========================================================================== */

.SashaVersion
	font-size .9rem
	font-weight bold

/* >> Center element
	========================================================================== */

/*
 * Replace center tag:
 * https://webref.ru/html/center
 */

.SashaCenter
	text-align center

/* >> Inline and block
	========================================================================== */

// Make block elements to inline
.SashaInline
	float left

/* >> Shadows
	========================================================================== */

.SashaShadow
	font-family "Times New Roman", Times, serif
	font-size 1.6rem
	width auto


/* ==========================================================================
	> External scripts and plugins
	========================================================================== */

/* >> Clipboard.js
	========================================================================== */

/*
 * Clipboard.js button
 * Using “float: right” instead of “position: absolute”,
 * That button not block a text, see:
 * http://bit.ly/2EwrJBH
 */

.SashaButton
	float right

// Width of clipboard button in code blocks
.SashaNotModify
	width .8125rem

/* >> Tooltipster
	========================================================================== */

// Theme
.tooltipster-punk-purple
.tooltipster-punk-aquamarine
	.tooltipster-box
		border 0
		border-radius .3125rem

/* >> JQuery Lazy
	========================================================================== */

/*
 * JQuery Lazy
 * http://jquery.eisbehr.de/lazy/
 * I need add min-width to my images:
 * https://github.com/eisbehr-/jquery.lazy/issues/86
 */

.SashaLazy
	min-width 1rem

/* >> AddToAny
	========================================================================== */

/*
 * Small overlay block size:
 * “div”, that overwrite default value:
 * https://stackoverflow.com/a/9956515/5951529
 */

/* csslint ignore:start */

// [NOTE] Rules for third-party Gemini scrollbar plugin
// Small parent block size
// Div, that overwrite defailt value
div.a2a_floating_style
	padding .0625rem
	top 30%

div.a2a_default_style
	border-radius .375rem
	padding .25rem
	/*
	 * [LEARN][CSS] Prevent block stretching to all width
	 * https://toster.ru/q/322812
	 */
	float left

/* csslint ignore:end */

/*
 * [LEARN][CSS] “Easy Clearing Method” or “Clearfix”:
 * normalize indentation after floating:
 * https://css-tricks.com/almanac/properties/f/float/
 * https://www.w3schools.com/howto/howto_css_clearfix.asp
 */
.clearfix
	&:after
		content ""
		visibility hidden
		display block
		height 0
		clear both
