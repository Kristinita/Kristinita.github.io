	&:hover
		font 2.25rem Tahoma, Geneva, sans-serif
		font-weight bold
		padding .6875rem 2rem
		color darkorange
		border solid .25rem bisque
		border-radius .875rem
		background-color mintcream
		background-image linear-gradient(to bottom, mintcream, aliceblue)
		box-shadow 0 0 .125rem SashaKristinitaColor1, inset 0 0 .0625rem white

	&:active
		font 2.25rem Tahoma, Geneva, sans-serif
		font-weight bold
		padding .6875rem 2rem
		color lightblue
		border solid .25rem bisque
		border-radius .875rem
		background-color mintcream
		background-image linear-gradient(to bottom, mintcream, aliceblue)
		box-shadow 0 0 .125rem SashaKristinitaColor1, inset 0 0 .0625rem white

.Empress
	font 1.6875rem Tahoma, Geneva, sans-serif
