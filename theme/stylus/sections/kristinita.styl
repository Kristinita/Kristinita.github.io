	font-weight bold
	color paleturquoise

.SashaBowserExplorer
.SashaBowserFirefox
	position relative
	float left
	text-align left
	vertical-align 6rem
	bottom 0
	/* Фиксированное положение */
	right 0
	/* Цвет текста */
	width 100%
	/* Левый нижний угол */
	margin .875rem
	/* Поля вокруг текста */
	/* Ширина слоя */
	font-size 1.2rem
	font-weight bold
	color paleturquoise

/* Выравнивание по центру*/

.SashaCenter
	text-align center
	/* Отступ от нижнего элемента, чтобы заменить множество br, см. http://ru.stackoverflow.com/a/523379/199934 */
	margin 21rem 0 0

/* Надпись Поиск Кристиниты*/

.SashaKristinita
	@extend $SashaPlaceholderDisplayInline
	font-size 3rem
