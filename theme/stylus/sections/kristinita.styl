@import "../general/placeholders.styl"

SashaKristinitaColor1 = #bababa
SashaKristinitaColor2 = #ba55d8
SashaKristinitaColor3 = #ffae42
SashaKristinitaColor4 = rgba(0 0 0 .1)
SashaKristinitaColor5 = rgba(0 0 0 .3)
SashaKristinitaColor6 = rgba(0 0 0 .2)
SashaKristinitaColor7 = rgba(0 0 0 .25)
SashaKristinitaColor8 = rgba(0 0 0 .15)
SashaKristinitaColor9 = #ffbf00

body
	padding-right 0
	background url("https://kristinita.ru/theme/images/backgrounds/SashaRedLeavesBackground.jpg") no-repeat center center fixed
	background-size cover
	background-color papayawhip
	color mediumvioletred

a
	text-decoration none

html
	overflow-x hidden

/* Gemini
	========================================================================== */

img
	max-width 100%

/* Buttons */

.Sasha
	font 1.6875rem Tahoma, Geneva, sans-serif
	font-weight bold
	float right
	padding .6875rem 2rem
	text-align center
	text-decoration none
	color darkorange
	border solid .25rem lightpink
	border-radius .875rem
	background-color mistyrose
	/* To bottom instead of top for Autoprefixer — https://github.com/postcss/autoprefixer/issues/530#issuecomment-143785816 */
	// Commas required
	background-image linear-gradient(to bottom, mistyrose, pink)
	box-shadow 0 0 .125rem SashaKristinitaColor1, inset 0 0 .0625rem white

	&:hover
		font 2.25rem Tahoma, Geneva, sans-serif
		font-weight bold
		padding .6875rem 2rem
		color darkorange
		border solid .25rem lightpink
		border-radius .875rem
		background-color mistyrose
		background-image linear-gradient(to bottom, mistyrose, pink)
		background-position 0 -2rem
		box-shadow 0 0 .125rem SashaKristinitaColor1, inset 0 0 .0625rem white

	&:active
		font 2.25rem Tahoma, Geneva, sans-serif
		font-weight bold
		padding .6875rem 2rem
		color violet
		border solid .25rem lightpink
		border-radius .875rem
		background-color mistyrose
		background-image linear-gradient(to bottom, mistyrose, pink)
		background-position 0 -4rem
		box-shadow 0 0 .125rem SashaKristinitaColor1, inset 0 0 .0625rem white

.Chernykh
	font 1.6875rem Tahoma, Geneva, sans-serif
