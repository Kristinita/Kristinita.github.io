.progress-80plus
	.progress-bar
		background-color Sasha-Progressbar-80

.progress-70plus
	.progress-bar
		background-color Sasha-Progressbar-70

.progress-60plus
	.progress-bar
		background-color Sasha-Progressbar-60

.progress-50plus
	.progress-bar
		background-color Sasha-Progressbar-50

.progress-40plus
	.progress-bar
		background-color Sasha-Progressbar-40

.progress-30plus
	.progress-bar
