@import "../components/placeholders.styl"

SashaBlackColor = #f4a900


/* >> Body
	========================================================================== */

body
	margin 0


/* >> Images
	========================================================================== */

/* [INFO] Force image resize and keep aspect ratio:
https://stackoverflow.com/a/23675095/5951529 */
img
	display block
	width 100%
	height auto

.SashaBlackLogo
	width 100%
	/* [INFO] Center image horizontally:
	https://www.freecodecamp.org/news/how-to-center-an-image-in-css#margin-auto */
	margin auto
	// [INFO] Not more than 857px — width of original image
	max-width 53.5625rem

.SashaPageLoading
	box-shadow none
	/*
	[INFO] Tracking will still:
	https://en.ryte.com/wiki/Tracking_Pixel
	 */
	display none


/* >> Input
	========================================================================== */

input
	font-weight bold
	height 2rem
	color maroon
	border-radius .4375rem

.SashaInput
	@extend $SashaTextAlignCenter
	@extend $KiraMarginBottomBr
	// [INFO] Not “margin-bottom” for “.SashaBlackLogo”, because this class already have “margin auto”
	@extend $KiraMarginTopBr

/* >> Links
	========================================================================== */

a
	font-size 1.75rem
	border-radius .875rem
	text-decoration none

	&:focus
		outline 0
		border .0625rem solid red

	&:visited
		color pink

	&:active
		color pink

	&.SashaButtonCategory
		border-style outset
		border-color bisque

		&:hover
			border-style solid
			border-color white
			box-shadow 0 0 .625rem rgba(0 0 0 .5)

		// [INFO] Comma-separated “box-shadow”:
		// https://stackoverflow.com/a/8556627/5951529
		&:active
			border-style solid
			border-color white
			box-shadow 0 0 .625rem rgba(0 0 0 .5), 0 0 0 12.5rem rgba(0 0 0 .09) inset


/* >> Fonts
	========================================================================== */

.SashaOnlineScanners
	@extend $SashaTextAlignCenter
	@extend $KiraMarginBottomBr
	@extend $KiraPlay
	font-size 1.375rem
	font-weight lighter
	font-style normal
	color tomato

.SashaDifferentUrl
.SashaReadHelp
	@extend $SashaTextAlignCenter
	font-family Arial, Helvetica, sans-serif
	font-size 1.2rem
	color orchid

.SashaCheckYourSite
	@extend $KiraPlay
	font-size clamp(2rem, 3vw, 3.125rem)
	color tomato


.SashaCategory
	font-size clamp(1.3rem, 2vw, 2rem)

.SashaButtonCategory
	font-size clamp(1.3rem, 2vw, 2rem)
	color black

.SashaBorderInput
	/* [INFO] Box model:
	https://github.com/CSSLint/csslint/wiki/Beware-of-box-model-size
	https://caniuse.com/#feat=css3-boxsizing
	https://css-tricks.com/the-css-box-model/
	https://simonwillison.net/2003/May/26/theBoxModel/
	 */
	box-sizing border-box
	border .25rem double black
	border-style outset
	border-color darkorange
	width 90%

.SashaBottom
	@extend $SashaTextAlignCenter
	margin-top 3rem

.SashaButtonLightSkyBlue
	background-color lightskyblue

.SashaButtonLimeGreen
	background-color limegreen

.SashaButtonPlum
	background-color plum

.SashaButtonSnow
	background-color snow

.SashaButtonBisque
	background-color bisque

.SashaButtonOrange
	background-color SashaBlackColor

.SashaButtonYellow
	background-color yellow

.SashaButtonDarkOrange
	background-color darkorange

.SashaButtonSilver
	background-color silver

.SashaButtonTomato
	background-color tomato

.SashaButtonSeagreen
	background-color seagreen

.SashaButtonChocolate
	background-color chocolate
